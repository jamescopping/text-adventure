<?xml version="1.0" encoding="UTF-8"?>
<story>
    <!-- Scenes -->
    <scenes>
        <scene>
            <name>forest_opening</name>
            <description>You wake up, heavy eyes lift to reveal amber leaved branches swaying in the wind.
                         Your hands dig into the dirt as you pull yourself up off the cold ground.
                         Dusting yourself off, you rap your jacket around you as a bitter gale passes you.
                         Looking around you and see trees in all directions lit dimly from the setting sun.
            </description>
            <paths>
                <path>
                    <sceneName>forest_grove</sceneName>
                    <description>north</description>
                </path>
            </paths>
            <items>
                <item>
                    <itemName>weird_note#1</itemName>
                </item>
            </items>
            <objects>
                <objectName>tree_stump</objectName>
            </objects>
        </scene>


        <scene>
            <name>forest_grove</name>
            <description>
                    You come across a grove in the forest, the trees break away for long grass. \n
                    There are some [brown_mushroom]'s growing up against an old tree stump. \n
                    You think you can see a cave off to the east. 
            </description>
            <paths>
                <path>
                    <sceneName>forest_cave</sceneName>
                    <description>east</description>
                </path>
            </paths>
            <items>
                <item>
                    <nameName>brown_mushroom</nameName>
                    <quantity>3</quantity>
                </item>
            </items>
            <objects>
                <objectName>tree_stump</objectName>
                <objectName>wooden_chest</objectName>
            </objects>
            <mobs></mobs>
        </scene>

        <scene>
            <name>forest_cave</name>
            <paths>
                <path>
                    <sceneName></sceneName>
                    <description></description>
                </path>
            </paths>
            <items></items>
            <objects></objects>
            <mobs></mobs>
        </scene>
    </scenes>

